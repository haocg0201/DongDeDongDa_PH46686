<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:paddingLeft="30dp"
    android:background="@drawable/bg_border_item_stadium">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="3dp"
        android:layout_height="match_parent"
        android:id="@+id/stadium_img"
        android:src="@mipmap/logo"
        android:scaleType="centerInside" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/stadium_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stadium Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stadium_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stadium Location" />

        <TextView
            android:id="@+id/stadium_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stadium Price" />
    </LinearLayout>


</LinearLayout>